# =====================================
# Lagos Security Sentiment Analysis
# Environment Configuration Template
# =====================================

# Copy this file to .env and fill in your actual values
# cp .env.example .env

# =====================================
# DATABASE CONFIGURATION
# =====================================
DATABASE_PATH=data/lagos_sentiment.db
DATABASE_BACKUP_PATH=data/backups/

# =====================================
# API CONFIGURATION
# =====================================
FLASK_ENV=development
FLASK_DEBUG=True
API_HOST=0.0.0.0
API_PORT=5000
SECRET_KEY=your-secret-key-here-change-this-in-production

# =====================================
# DATA COLLECTION SETTINGS
# =====================================

# Twitter API Credentials (Get from: https://developer.twitter.com)
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# News API Key (Get from: https://newsapi.org)
NEWS_API_KEY=your_news_api_key_here

# Data Collection Frequency (in hours)
COLLECTION_INTERVAL_HOURS=4

# Daily Collection Limits
TWITTER_DAILY_LIMIT=5000
NEWS_DAILY_LIMIT=200
GOVERNMENT_DAILY_LIMIT=50

# =====================================
# ALERT SETTINGS
# =====================================

# Email Configuration for Alerts
ALERT_EMAIL_ENABLED=False
ALERT_EMAIL_SMTP_SERVER=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USERNAME=your_email@gmail.com
ALERT_EMAIL_PASSWORD=your_app_specific_password_here
ALERT_RECIPIENT_EMAIL=alerts@lagosstate.gov.ng

# Alert Thresholds
ALERT_HIGH_THRESHOLD=-0.5
ALERT_MEDIUM_THRESHOLD=-0.3
ALERT_MINIMUM_SOURCES=3

# =====================================
# BIAS CORRECTION SETTINGS
# =====================================

# Adjustment factors for different sources (0.0 to 2.0)
BIAS_TWITTER_FACTOR=0.7
BIAS_FACEBOOK_FACTOR=0.8
BIAS_NEWS_FACTOR=0.6
BIAS_GOVERNMENT_FACTOR=1.2
BIAS_COMMUNITY_FACTOR=1.0

# =====================================
# LOGGING CONFIGURATION
# =====================================
LOG_LEVEL=INFO
LOG_FILE=logs/lagos_sentiment.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# =====================================
# SECURITY SETTINGS
# =====================================

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=100

# CORS Settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Session Settings
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =====================================
# PERFORMANCE SETTINGS
# =====================================

# Database Connection Pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Worker Threads
WORKER_THREADS=4

# =====================================
# MONITORING & HEALTH CHECKS
# =====================================

# Health Check Settings
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL=300

# Monitoring Email Alerts
MONITORING_EMAIL_ENABLED=False
MONITORING_EMAIL_RECIPIENT=devops@lagos-sentiment.com

# =====================================
# FEATURE FLAGS
# =====================================

# Enable/Disable Features
ENABLE_TWITTER_COLLECTION=True
ENABLE_NEWS_COLLECTION=True
ENABLE_GOVERNMENT_COLLECTION=True
ENABLE_COMMUNITY_REPORTS=False

# Enable Real-time Analysis
ENABLE_REALTIME_ANALYSIS=True

# Enable Backup Automation
ENABLE_AUTO_BACKUP=True
BACKUP_INTERVAL_HOURS=24

# =====================================
# LAGOS-SPECIFIC SETTINGS
# =====================================

# Priority Areas (comma-separated)
PRIORITY_AREAS=Victoria Island,Ikeja,Surulere,Yaba,Ikoyi

# Supported Languages
SUPPORTED_LANGUAGES=english,pidgin,yoruba

# Security Categories
SECURITY_CATEGORIES=traffic,crime,law_enforcement,emergency,general

# =====================================
# DEVELOPMENT SETTINGS
# =====================================

# Enable Debug Toolbar
DEBUG_TOOLBAR=False

# Enable SQL Query Logging
SQL_DEBUG=False

# Enable Request Logging
REQUEST_LOGGING=True

# =====================================
# PRODUCTION SETTINGS
# =====================================

# Use these settings in production

# FLASK_ENV=production
# FLASK_DEBUG=False
# SECRET_KEY=generate-a-strong-random-secret-key
# SESSION_COOKIE_SECURE=True
# API_RATE_LIMIT=1000
# LOG_LEVEL=WARNING

# =====================================
# OPTIONAL INTEGRATIONS
# =====================================

# Sentry Error Tracking (optional)
SENTRY_DSN=

# Google Analytics (optional)
GOOGLE_ANALYTICS_ID=

# Slack Webhook for Alerts (optional)
SLACK_WEBHOOK_URL=

# =====================================
# NOTES
# =====================================

# 1. Never commit the actual .env file to version control
# 2. Generate a strong SECRET_KEY in production:
#    python -c "import secrets; print(secrets.token_hex(32))"
# 3. Use app-specific passwords for Gmail
# 4. Keep API keys secure and rotate them regularly
# 5. Enable SSL/TLS in production (SESSION_COOKIE_SECURE=True)